{
  "manifest_version": 2,
  "name": "Serial DI-28SS",
  "description": "Ứng dụng đọc kết quả từ đầu cân DI-28SS.",
  "version": "0.1",
  "author": "Giau TM (giau.tmg@gmail.com)",
  "app": {
    "background": {
      "scripts": [
        "src/background.js"
      ],
      "persistent": false
    }
  },
  "icons": {
    "32": "icon/tiki32.png",
    "48": "icon/tiki48.png",
    "64": "icon/tiki64.png",
    "128": "icon/tiki128.png"
  },
  "externally_connectable": {
    "matches": [
      "*://*.tiki.vn/*",
      "*://*.tiki.com/*"
    ]
  },
  "permissions": [
    "alwaysOnTopWindows",
    "fullscreen",
    "serial"
  ]
}
