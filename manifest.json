{
  "manifest_version": 2,
  "name": "Serial DI-28SS",
  "description": "DI-28SS connector",
  "version": "1.6",
  "author": "Giau TM (giau.tmg@gmail.com)",
  "app": {
    "background": {
      "scripts": [
        "src/background.js"
      ],
      "persistent": false
    }
  },
  "icons": {
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "64": "icon/icon64.png",
    "128": "icon/icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "*://*.tiki.vn/*",
      "*://*.tiki.com/*",
      "https://developer.chrome.com/extensions/messaging"
    ]
  },
  "permissions": [
    "alwaysOnTopWindows",
    "fullscreen",
    "serial"
  ]
}
